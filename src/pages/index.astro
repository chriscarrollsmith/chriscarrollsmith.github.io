---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderAstro from '../components/HeaderAstro.astro';
import HomeClient from '../components/HomeClient.tsx';
import About from '../components/About.tsx';
import Projects from '../components/Projects.tsx';
import ProjectFeature from '../components/ProjectFeature.tsx';
import Writing from '../components/Writing.tsx';
import Book from '../components/Book.tsx';
import Footer from '../components/Footer.tsx';
import '../App.css';
---

<BaseLayout
  title="Christopher Carroll Smith"
  description="Website of Christopher Carroll Smith, software architect, data storyteller, and president of Promptly Technologies, LLC."
  type="website"
>
  <div class="App">
    <HeaderAstro />
    <HomeClient client:load />
    <About client:load />
    <Projects client:load />
    <ProjectFeature client:load />
    <Writing client:load />
    <Book client:only="react" />
    <Footer client:load />
  </div>
</BaseLayout>
